<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>Simple web application</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>schollAdminServlet</servlet-name>
		<servlet-class>com.elegnat.school.controller.SchoolController</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>schollAdminServlet</servlet-name>
		<url-pattern>/sas</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>slc</servlet-name>
		<servlet-class>com.elegnat.school.controller.SchoolLoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>slc</servlet-name>
		<url-pattern>/loginHeadMaster</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ds</servlet-name>
		<servlet-class>com.elegnat.school.controller.DeletController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ds</servlet-name>
		<url-pattern>/deleteServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>us</servlet-name>
	  <servlet-class>com.elegnat.school.controller.UpdateController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>us</servlet-name>
		<url-pattern>/updateServlet</url-pattern>
	</servlet-mapping>

</web-app>
